<h1>Books#edit</h1>
<!--投稿編集画面-->
<div class="container">
  <h1>Editing Book</h1>

  <div class="edit-content">
    <%= form_with model: @book do |f| %>
      <!--タイトル編集-->
      <label for="InputTitle">Title</label>
      <%= f.text_field :title, autofocus: true %>
      <!--感想編集-->
      <label for="InputOpinion">Opinion</label>
      <%= f.text_area :body %>
      <!--アップデートボタン-->
      <%= f.submit 'Update Book' %>
    <% end %>
  </div>

<!--Bookのshowとindexへのリンク-->
<p><%= link_to 'Show', book_path(@book) %></p>
<div>|</div>
<p><%= link_to 'Back', books_path %></p>
</div>
