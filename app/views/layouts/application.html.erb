<!DOCTYPE html>
<html>
  <head>
    <title>Bookers22</title>
    <%= csrf_meta_tags %>
    <%= csp_meta_tag %>
    <meta name="viewport" content="width=device-width,initial-scale=1, maximum-scale=1">
    <script src="https://kit.fontawesome.com/96018690bc.js" crossorigin="anonymous"></script>

    <%= stylesheet_pack_tag 'application', media: 'all', 'data-turbolinks-track': 'reload' %>
    <%= javascript_pack_tag 'application', 'data-turbolinks-track': 'reload' %>
    <link href="https://stackpath.bootstrapcdn.com/bootstrap/4.3.1/css/bootstrap.min.css" rel="stylesheet">
  </head>

  <body class="d-flex flex-column vh-100">

    <header>
      <nav class="navbar navbar-dark bg-dark">
        <div class="container">
          <a class="navbar-brand" href="/">
            <span>Bookers</span>
          </a>
          <ul class="navbar-nav  ml-auto navbar-expand-lg">
            <% if user_signed_in? %>
              <li class="nav-item">
                <i class="fa-solid fa-home"></i>
                <%= link_to "Home", user_path(current_user), class: 'nav-link text-light' %>
              </li>
              <li class="nav-item">
                <i class="fa-solid fa-users"></i>
                <%= link_to "Users", users_path, class: 'nav-link text-light' %>
              </li>
              <li class="nav-item">
                <i class="fa-solid fa-book-open"></i>
                <%= link_to "Books", books_path, class: 'nav-link text-light' %>
              </li>
              <li class="nav-item">
               <i class="fa-solid fa-right-from-bracket"></i>
              <%= link_to "Log out", destroy_user_session_path, method: :delete, class: 'nav-link text-light' %>                </li>
            <% else %>
              <li class="nav-item">
                <i class="fa-solid fa-home"></i>
                <%= link_to "Home", root_path, class: 'nav-link text-light' %>
              </li>
              <li class="nav-item">
                <i class="fa-solid fa-link"></i>
                <%= link_to "About", about_path, class: 'nav-link text-light' %>
              </li>
              <li>
                <i class="fa-solid fa-user-plus"></i>
                <%= link_to "Sign up", new_user_registration_path, class: 'nav-link text-light' %>
              </li>
              <li class="nav-item">
                <i class="fa-solid fa-right-to-bracket"></i>
                <%= link_to "Log in", new_user_session_path, class: 'nav-link text-light' %>
              </li>
            <% end %>
          </ul>
        </div>
      </nav>
    </header>

    <main class="mb-auto">
      <% flash.each do |key, value| %>
        <%= content_tag(:div, value, class: "#{key}") %>
      <% end %>
      
      <%= yield %>
    </main>

    <footer>
      <div class="container mt-5">
        <div class="row">
          <div class="mx-auto">
            <p>CopyRight Infratop.inc</p>
          </div>
        </div>
      </div>
    </footer>

  </body>
</html>
